<% unless tasks.empty? %>
    <div class="col-lg-5">

        <table class="table table-hover table-responsive">
          <thead class="header-table">
          <tr>
            <th class="text-left">Label</th>
            <th class="text-center">building date</th>
            <th class="text-center">state</th>
            <th class="text-center">start time</th>
            <th class="text-center">finish date</th>
            <th class="text-center">error message</th>
          </tr>
          </thead>

          <tbody>
          <% tasks.each do |task| %>
              <tr>
                <td class="text-left vert-align"><%= task.label %></td>
                <td class="text-center vert-align"><%= task.building_date%></td>
                <% case task.state
                     when "start"
                       color_class="label label-primary"
                     when "over"
                       color_class="label label-success"
                     when "fail"
                       color_class="label label-danger"
                     else
                       color_class="label label-default"
                   end %>
                <td class="text-center vert-align"><span class="<%= color_class %>"><%= task.state %></span></td>
                <td class="text-center vert-align"><%= task.time.to_s(:time)%></td>
                <td class="text-center vert-align"><%= task.finish_time.nil? ? "" : task.finish_time.to_s(:db)%></td>
                <td class="text-left"><%= task.error_label %></td>

              </tr>
          <% end %>
          </tbody>
        </table>

    </div>
<% else %>
    <p>no task</p>
<% end %>

