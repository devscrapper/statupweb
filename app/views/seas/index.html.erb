<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading"><h3>Listing Seas<span class="badge"><%= Sea.count %></span></h3></div>
  <div class="panel-body">
    <%= link_to 'New Sea', new_sea_path, class: 'btn btn-sm btn-default' %>
    <%= link_to 'Delete all Seas', destroy_all_seas_path, class: "btn btn-sm btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>

    <div class="table-responsive">
      <table class="table table-hover ">
        <thead class="header-table">

        <tr>
          <th class="text-left">Label</th>
          <th class="text-left">Advertiser</th>
          <th class="text-left">Keywords</th>
          <th class="text-left">Fqdn advertising</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @seas.each do |sea| %>
            <tr>
              <td class="text-left vert-align"><%= sea.label %></td>
              <td class="text-left vert-align"><%= sea.advertiser %></td>
              <td class="text-left vert-align"><%= sea.keywords_dspl %></td>
              <td class="text-left vert-align"><%= sea.fqdn_advertisings_dspl %></td>
              <td class="text-center vert-align"><%= link_to 'Edit', edit_sea_path(sea), class: "btn btn-sm btn-default" %></td>
              <td class="text-center vert-align">
                <%= if sea.published?
                      form_for sea, as: :post, method: :patch, url:
                                                 publish_sea_path(sea) do |f|
                        f.submit "Publish", class: "btn btn-sm btn-warning", data: {confirm: "Are you sure?"}
                      end
                    end %>
              </td>
              <td class="text-center vert-align"><%= link_to 'Destroy', sea, method: :delete, class: "btn btn-sm btn-danger", data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

