<%= form_for(@website, :html => {:class => "form-horizontal"}) do |f| %>
    <% if @website.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@website.errors.count, "error") %> prohibited this website from being saved:</h2>

          <ul>
            <% @website.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="container-fluid">
      <div class="panel panel-default">
        <div class="panel-heading"><%= label %></div>
        <div class="panel-body">

            <div class="form-group">
              <%= f.label :label, class: "control-label  col-lg-3" %>
              <div class="col-lg-3">
                <%= f.text_field :label, class: "form-control", size: 48 %>
              </div>
            </div>
            <div class="form-group">

              <%= f.label :url_root, class: "control-label  col-lg-3" %>
              <div class="col-lg-3">
                <%= f.url_field :url_root, class: "form-control", size: 48 %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :profil_id_ga, class: "control-label  col-lg-3" %>
              <div class="col-lg-1">
                <%= f.text_field :profil_id_ga, class: "form-control", size: 16 %>
              </div>
            </div>


            <div class="form-group">
              <%= f.label :count_page, class: "control-label  col-lg-3" %>
              <div class="col-lg-1">
                <%= f.number_field :count_page, class: "form-control", :min => 0 %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :schemes, class: "control-label  col-lg-3" %> (hold shift to select more than one)
              <div class="col-lg-2">
                <%= f.select :schemes, options_for_select([["Scrape only http scheme", "http"], ["Scrape only https scheme", "https"]], @website.schemes), {}, {:class => "form-control", :multiple => true} %>
              </div>

            </div>
            <div class="form-group">
              <%= f.label :types, class: "control-label  col-lg-3" %> (hold shift to select more than one)
              <div class="col-lg-2">
                <%= f.select :types, options_for_select([["Scrape Fqdn url", "local"], ["Scrape Domain url", "global"], ["Scrape Extern url", "full"]], @website.types), {}, {:class => "form-control", :multiple => true} %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :advertisers, class: "control-label  col-lg-3" %> (hold shift to select more than one)
              <div class="col-lg-2">
                <%= f.select :advertisers, options_for_select(["adsense"], @website.advertisers), {}, {:class => "form-control", :multiple => true} %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-10">

                <%= f.submit "Save", class: "btn btn-info" %>
              </div>
            </div>



        </div>

      </div>

    </div>

    </div>






<% end %>
